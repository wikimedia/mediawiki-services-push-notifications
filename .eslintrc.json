{
  "extends": [
    "wikimedia/server",
    "wikimedia/node",
    "wikimedia/language/es2016"
  ],
  "plugins": ["json", "jsdoc"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": [
      "error",
      {
        "properties": "never"
      }
    ],
    "indent": ["off", 4],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],
    "space-in-parens": ["error", "never"],
    "computed-property-spacing": "off",
    "no-multi-spaces": "off",
    "prefer-const": "error",
    "no-underscore-dangle": "off",
    "array-bracket-spacing": "off",
    "padded-blocks": ["error", "never"]
  }
}
